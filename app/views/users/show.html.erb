
<div class="profile">  
    <ul class="row col-lg-6">
        
        
           <li><%= @user.name %></li>
           <li><%= image_tag(@user.image.url) %></li>
           <li>自己紹介</li>
           <li><%= @user.profile %></li>
           <% if @user.id == current_user.id %>
           <li><%= link_to "edit profile", edit_user_path(@user),class: 'btn btn-info' %></li>
           <% end %>
    </ul>
</div>    

<div class="participant">
    
    <h3><%= @user.name %>さんの参加ライブ一覧</h3>
    
</div>

<% @participants_gigs.each do |participant| %>
<li><%= participant.artist %>
<%= participant.place %></li>
<li><%= image_tag participant.image %></li>

<% end %>
<h3><%= link_to "みんなの投稿ライブ一覧", gigs_path %></h3>


